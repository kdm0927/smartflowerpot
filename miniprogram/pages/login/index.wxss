/* 전체 배경 */
.wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 제목 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

/* 입력창 */
input {
  width: 80%;
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 1px solid #ccc;
  font-size: 28rpx;
  background: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 버튼 */
button {
  width: 80%;
  margin-top: 40rpx;
  padding: 20rpx;
  border: none;
  border-radius: 12rpx;
  background: #4cafef;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.15);
  transition: background 0.3s;
}

/* 버튼 hover 효과 */
button:active {
  background: #3793cf;
}

/* 데모 계정 안내 */
.demo {
  margin-top: 50rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}
