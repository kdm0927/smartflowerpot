/* 배경 */
page { background: #FFFCEE; }
.care { position: relative; width: 750rpx; min-height: 1620rpx; overflow: hidden; }
.bg { position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 0; }

/* 상단 초록 그라스 */
.scrim { position: absolute; left: 0; top: 0; width: 100%; height: 236rpx;
  background: rgba(74,159,78,0.6); z-index: 1; }

/* 헤더 */
.header { position: absolute; left: 0; top: 86rpx; width: 100%; text-align: center; color: #fff; z-index: 2; }
.h1 { font-size: 48rpx; font-weight: 600; }
.h2 { display: block; margin-top: 12rpx; font-size: 30rpx; opacity: .95; }

/* 말풍선 */
.speech {
  position: absolute; left: 48rpx; right: 48rpx; top: 290rpx; z-index: 3;
  background: rgba(255,255,255,.92); color: #595959; border-radius: 24rpx;
  padding: 22rpx 26rpx; box-shadow: 0 12rpx 24rpx rgba(0,0,0,.15);
  font-size: 34rpx; line-height: 48rpx;
}
.speech .em { color: #2e7d32; font-weight: 600; }

/* 큰 물방울 버튼 */
.drop-btn {
  position: absolute; left: 116rpx; right: 116rpx; top: 520rpx; height: 560rpx;
  background: transparent; border: none; padding: 0;
  display: flex; align-items: center; justify-content: center;
  z-index: 3;
}
.drop-img { width: 520rpx; height: 520rpx; filter: drop-shadow(0 16rpx 32rpx rgba(0,0,0,.25)); }
.drop-label { position: absolute; text-align: center; color: #fff; font-size: 44rpx; line-height: 1.3; }
.drop-btn:active .drop-img { transform: scale(0.98); }
.is-watering .drop-img { animation: pulse 1.1s infinite ease-in-out; }
@keyframes pulse { 0%{transform:scale(1)} 50%{transform:scale(1.03)} 100%{transform:scale(1)} }

/* 자동급수 카드 */
.auto-card {
  position: absolute; left: 48rpx; right: 48rpx; bottom: 400rpx; z-index: 3;
  background: rgba(255,255,255,0.8); border-radius: 36rpx;
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,.18);
  padding: 22rpx 28rpx; display: flex; align-items: center; justify-content: space-between;
}
.auto-label { font-size: 32rpx; color: #595959; }
.auto-switch { transform: scale(0.9); }  /* 살짝 작게 */
