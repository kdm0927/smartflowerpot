<view class="home">
  <!-- 배경 이미지 -->
  <image class="bg" src="/images/BgImage.png" />

  <!-- 상단 반투명 헤더 -->
  <view class="topbar"></view>
  <view class="greeting">
    <text class="t1">Good morning! 🌿</text>
    <text class="t2">{{today}}, Growing+{{growing}}</text>
  </view>

<view class="quest card">
  <text class="quest-title">Today’s Quest</text>
  <checkbox-group bindchange="onQuestChange">
  <block wx:for="{{quests}}" wx:key="key">
    <label    class="quest-row">
        <checkbox value="{{item.key}}" checked="{{item.checked}}"/>
        <text>{{item.title}}</text>
      </label>
    </block>
  </checkbox-group>
  <button class= "savebtn" type="default" size="mini" bindtap="onSave">Save</button>
</view>


  <!-- 상태 카드 -->
  <view class="status card">
    <image class="pot" src="/images/flowerpot_icon.png" mode="aspectFit"/>
    <view class="status-text">
      <text class="big">I am feeling</text>
      <text class="accent">{{tempStatus}}</text>
      <text class="big">and</text>
      <text class="accent">{{moistureStatus}}</text>
      <view class="mini-rows">
        <view class="mini">
          <image src="/images/temperature.png" class="mini-icon"/>
          <text>{{temperature}} °C</text>
        </view>
        <view class="mini">
          <image src="/images/moisture.png" class="mini-icon"/>
          <text>{{moistureStatus}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 하단 3타일 -->
  <view class="tiles">
    <view class="tile weather" bindtap="openWeather">
      <image class="tile-bg" src="/images/sunny.png" mode="aspectFill"/>
      <text class="w-temp">{{weather.temp}}℃</text>
      <view class="pm-ring">
        <view class="pm-ring-outer"></view>
        <view class="pm-ring-inner"></view>
      </view>
      <text class="pm-label">PM {{weather.pm10}}</text>
    </view>

    <view class="tile album" bindtap="goAlbum">
      <image class="tile-bg" src="/images/album.png"/>
      <text class="tile-title">Growth album</text>
    </view>

    <view class="tile care" bindtap="goCare">
      <image class="tile-bg" src="/images/water.png" mode="aspectFill"/>
      <text class="tile-title">Taking care of Plants</text>
    </view>

    <button class="logout" size="mini" bindtap="onLogout">Logout</button>
    <button class="feedback" size="mini" bindtap="goFeedback">Feed Back</button>
  </view>
</view>
