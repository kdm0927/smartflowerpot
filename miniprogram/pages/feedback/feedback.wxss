.feedback {
  padding: 20rpx;
  background: #f9f9f9;
  min-height: 100vh;
}

.topbar {
  position: absolute;
  left: 0;
  top: 0;
  width: 750rpx;
  height: 150rpx;
  background: rgba(74,159,78,0.6);
  text-align: center;
  line-height: 150rpx; /* 텍스트를 세로 가운데로 */
}


.card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
}

.content {
  display: block;
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #333;
}

.date {
  font-size: 24rpx;
  color: #888;
  text-align: right;
  display: block;
}

.empty {
  text-align: center;
  color: #aaa;
  margin-top: 50rpx;
}
