.back-btn {
  position: fixed;
  top: 48rpx;            /* 필요하면 조절 */
  left: 24rpx;
  z-index: 9999;

  display: inline-flex;
  align-items: center;
  gap: 10rpx;

  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  backdrop-filter: blur(6px);
  background: rgba(255,255,255,.86);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,.12);

  color: #222;
  font-size: 28rpx;
}
.back-btn .icon {
  font-size: 40rpx;
  line-height: 1;
}
.back-btn.dark {
  background: rgba(0,0,0,.55);
  color: #fff;
}
