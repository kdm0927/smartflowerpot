.container {
  padding: 20px;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.data-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.data-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.data-row:last-child {
  margin-bottom: 0;
}

.data-item {
  display: flex;
  align-items: center;
  width: 48%;
  background-color: #f9f9f9;
  border-radius: 10px;
  padding: 12px;
}

.data-content {
  display: flex;
  flex-direction: column;
}

.data-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.data-value {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.mode-display {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12px;
  border-radius: 12px;
  margin-bottom: 20px;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.manual-mode {
  border-left: 5px solid #2196F3;
}

.auto-mode {
  border-left: 5px solid #4CAF50;
}

.mode-text {
  font-size: 16px;
  font-weight: bold;
}

.pump-control {
  background-color: #fff;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.pump-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 12px;
  color: #333;
}

.pump-buttons {
  display: flex;
  justify-content: space-between;
}

.pump-buttons button {
  width: 48%;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  border-radius: 8px;
}

.pump-status {
  margin-top: 10px;
  text-align: center;
  font-size: 14px;
  color: #666;
}

.auto-notice {
  background-color: #fff;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  font-size: 14px;
}

.status {
  margin-top: 20px;
  text-align: center;
  font-size: 12px;
  color: #999;
}